<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_purple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/scorentrylayout">

        <ImageView
            android:id="@+id/scoreEntrySign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/actionBarEntryTv"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sharp_add_task_24"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/actionBarEntryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/scoreEntrySign"
            android:text="@string/score_entry_heading"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/save_svgrepo_com"
            android:tooltipText="Add Score"
            android:visibility="visible"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>
</RelativeLayout>