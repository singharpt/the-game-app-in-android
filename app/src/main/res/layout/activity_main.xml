<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/custom_actionbar_game_menu" />

    <ImageView
        android:id="@+id/gameLogo"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:src="@drawable/__balloon_decoration_christmas_xmas_celebration_party_icon_icons_com_77039"
        android:contentDescription="Balloon Game Logo" />

    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/new_game_button_heading"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:padding="5dp"
        android:background="@android:color/holo_purple"
        android:textColor="@color/white"
        android:textFontWeight="500" />

    <Button
        android:id="@+id/viewLeaderboardBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/score_display_heading"
        android:layout_below="@+id/startGameBtn"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:padding="5dp"
        android:background="@android:color/holo_purple"
        android:textColor="@color/white"
        android:textFontWeight="500"/>

</RelativeLayout>